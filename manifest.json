{
  "manifest_version": 3,
  "name": "Fake AI voice detector",
  "version": "1.0",
  "description": "Captures audio from active YouTube tabs and sends it to external API",
  "icons": {
    "128": "./images/icon.png"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./images/icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "service-worker.js"
  }
}
